{
  "name": "zoho-signature-generator",
  "version": "3.3.0",
  "type": "module",
  "description": "Professional email signatures for Zoho employees",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:visual": "playwright test",
    "test:visual:ui": "playwright test --ui",
    "test:visual:headed": "playwright test --headed",
    "test:all": "npm run test && npm run test:visual",
    "test:update-snapshots": "vitest run -u && playwright test --update-snapshots"
  },
  "keywords": [
    "email-signature",
    "zoho"
  ],
  "author": "Tejas Gadhia",
  "license": "SEE LICENSE IN LICENSE.md",
  "devDependencies": {
    "@playwright/test": "^1.58.1",
    "@types/node": "^20.11.5",
    "@types/sortablejs": "^1.15.9",
    "jsdom": "^28.0.0",
    "terser": "^5.46.0",
    "typescript": "^5.3.3",
    "vite": "^6.4.1",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "sortablejs": "^1.15.6"
  }
}
